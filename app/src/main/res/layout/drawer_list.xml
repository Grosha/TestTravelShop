<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/drawer_category_icon"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <TextView
        android:id="@+id/drawer_category_name"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drawer_category_icon"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/drawer_category_icon"
        android:layout_toRightOf="@+id/drawer_category_icon"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
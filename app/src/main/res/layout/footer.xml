<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/footer_drawer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e3efff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/footer_drawer_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:text="Invite your friends to the app!"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#8e8c8f"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/footer_drawer_image"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/share_btn_VK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:nestedScrollingEnabled="false"
            android:onClick="sharedVK"
            android:src="@drawable/ic_vk" />

        <ImageView
            android:id="@+id/share_btn_TW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="sharedTwitter"
            android:src="@drawable/ic_tw" />

        <ImageView
            android:id="@+id/share_btn_G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="sharedGoogle"
            android:src="@drawable/ic_g" />

        <com.facebook.share.widget.ShareButton
            android:id="@+id/shareButton"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:onClick="sharedFacebook" />

        <ImageView
            android:id="@+id/share_btn_F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:src="@drawable/ic_f"
            android:onClick="sharedFacebook" />


    </LinearLayout>


</LinearLayout>